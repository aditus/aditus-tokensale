.sectionSale

  .sectionSaleDetail
    background-color #111
    border-radius 4px
    margin-top 20px
    margin-bottom 15px
    padding 25px 10px

    .sectionSaleDetailInfo
      float left
      border-right 1px dashed #BBB
      width calc(40%)
      padding 0px 40px
      height 200px

      .sectionSaleDetailInfoEntry
        margin-bottom 15px

        &:first-child
          margin-bottom 35px

        .sectionSaleDetailInfoEntryDisclaimer
          font-style italics
          font-size 11px
          color #888
          margin-top 2px

      .sectionSaleDetailInfoNum
        font-size 34px
        letter-spacing -0.4px

      .sectionSaleDetailInfoDate
        font-size 18px
        color #c69c2b

    .sectionSaleDetailAddress
      float left
      padding 0px 40px
      width calc(60%)

      .sectionSaleDetailAddressDisclaimer
        font-size 12px
        color #666
        font-style italic

      .sectionSaleDetailAddressTitle
        margin-bottom 25px
        font-size 16px

      .sectionSaleDetailAddressEntry
        margin-bottom 15px

        input
          font-size 18px
          color black

        .sectionSaleDetailAddressEntryTitle
          margin-bottom 5px
          font-size 14px


@media screen and (max-width: 720px)
  .sectionSaleDetailInfo
    float none !important
    border-right none !important
    border-bottom 1px dashed #BBB !important
    width calc(100%) !important
    padding 20px 40px !important
    height auto !important


  .sectionSaleDetailAddress
    float none !important
    padding 20px 40px !important
    width calc(100%) !important

@media screen and (min-width: 721px){}
